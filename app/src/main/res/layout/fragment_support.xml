<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.SupportFragment"
    android:background="@color/gray">

    <View
        android:id="@+id/logo"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/icon_logo"
        app:layout_constraintBottom_toTopOf="@+id/palka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/palka"
        android:layout_width="261dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_chat"
        android:backgroundTint="@color/orange"
        android:paddingStart="10dp"
        android:rotation="-15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424"
        tools:text="В РАЗРАБОТКЕ" />

    <TextView
        android:id="@+id/text"
        android:layout_width="261dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_palka_dark_gray"
        android:fontFamily="@font/jost_semi_bold"
        android:gravity="center"
        android:rotation="15"
        android:textColor="@color/orange"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424"
        tools:text="В РАЗРАБОТКЕ" />

    <View
        android:id="@+id/icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/icon_send_file"
        app:layout_constraintEnd_toEndOf="@+id/palka"
        app:layout_constraintTop_toTopOf="@+id/palka" />

</androidx.constraintlayout.widget.ConstraintLayout>